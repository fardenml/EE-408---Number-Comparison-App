<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.clarkson.ee408.numcompare.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/learnButton"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:hapticFeedbackEnabled="true"
        android:onClick="learn"
        android:text="Learn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/quizButton"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:hapticFeedbackEnabled="true"
        android:onClick="tryIt"
        android:text="Try It Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/learnButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="299dp"
        android:layout_height="74dp"
        android:layout_marginTop="84dp"
        android:text="Welcome to Number Comparision Choose one of the options below"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:onClick="quiz"
        android:text="Quiz Yourself"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizButton" />
</android.support.constraint.ConstraintLayout>
